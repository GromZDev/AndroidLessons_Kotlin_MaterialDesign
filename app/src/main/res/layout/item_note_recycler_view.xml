<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_film_container_rv_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/item_note_recycler_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_note_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/note_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_note_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@id/delete_button_item"
        app:layout_constraintStart_toEndOf="@id/item_note_image"
        app:layout_constraintTop_toTopOf="@id/item_note_image"
        tools:text="Note Name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_note_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/delete_button_item"
        app:layout_constraintStart_toEndOf="@id/item_note_image"
        app:layout_constraintTop_toBottomOf="@id/item_note_name"
        tools:text="Description" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/delete_button_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic__delete_item"
        app:layout_constraintTop_toTopOf="@id/item_note_name"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_item_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_arrow_up"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/delete_button_item"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_item_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_arrow_down"
        app:layout_constraintTop_toBottomOf="@id/delete_button_item"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_redact_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_redact_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_note_description"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>