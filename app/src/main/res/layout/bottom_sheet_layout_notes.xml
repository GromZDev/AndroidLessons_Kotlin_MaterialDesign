<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_sheet_layout_height"
    android:background="@color/bottom_sheet_layout_background"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/bottom_sheet_behaviour_peek_height"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:id="@+id/bottom_sheet_line"
        style="@style/My_Bottom_Sheet_Line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bottom_sheet_description_header_note"
        style="@style/My_Bottom_Sheet_Description_Header"
        android:autofillHints="1"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_line"
        tools:ignore="LabelFor"
        tools:text="Two Clusters and a Comet" />

    <EditText
        android:id="@+id/bottom_sheet_description_note"
        style="@style/My_Bottom_Sheet_Description"
        android:autofillHints="Описание"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_description_header_note"
        tools:ignore="LabelFor"
        tools:text="This lovely star spans some four full moons." />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottom_sheet_note_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/save"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_description_note" />

</androidx.constraintlayout.widget.ConstraintLayout>