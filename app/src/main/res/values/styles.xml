<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="My_Text_Input_Layout">
        <item name="android:layout_width">@dimen/fragment_main_text_input_layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/search_wiki</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">30</item>
        <item name="counterTextColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/fragment_main_text_input_layout_margin_top
        </item>
        <item name="endIconCheckable">true</item>
        <item name="android:padding">@dimen/fragment_main_text_input_layout_padding</item>
        <item name="endIconDrawable">@drawable/ic_baseline_check</item>
        <item name="endIconMode">custom</item>
        <item name="strokeColor">@color/text_input_layout_stroke_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="My_Input_Edit_Text">
        <item name="android:backgroundTint">@color/transparent_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="My_Chip_Group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipSpacingHorizontal">@dimen/fragment_main_chips_spacing</item>
        <item name="singleSelection">true</item>
    </style>

    <style name="My_Equilateral_Image_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/equilateral_Image_View_margin_top</item>
        <item name="android:contentDescription">@string/main_photo</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="My_Bottom_App_Bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:backgroundTint">@color/bottom_bar_bg_color</item>
        <item name="fabAlignmentMode">center</item>
        <item name="fabCradleRoundedCornerRadius">@dimen/fabCradleRoundedCornerRadius</item>
        <item name="hideOnScroll">true</item>
    </style>

    <style name="My_FAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/fab_color</item>
        <item name="layout_anchor">@id/bottom_bar</item>
        <item name="maxImageSize">@dimen/fab_image_max_size</item>
        <item name="srcCompat">@drawable/ic_baseline_read_more</item>
        <item name="tint">@color/fab_app_tint</item>
    </style>

    <style name="My_Bottom_Sheet_Line">
        <item name="android:layout_width">@dimen/bottom_sheet_line_width</item>
        <item name="android:layout_height">@dimen/bottom_sheet_line_height</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_line_margin_top</item>
        <item name="android:background">@color/bottom_sheet_line_background</item>
    </style>

    <style name="My_Bottom_Sheet_Description_Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_title_margin_top</item>
        <item name="android:paddingStart">@dimen/bottom_sheet_padding_start_end_center</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_padding_start_end_center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="My_Bottom_Sheet_Description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_description_margin_top</item>
        <item name="android:paddingStart">@dimen/bottom_sheet_padding_start_end_center</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_padding_start_end_center</item>
        <item name="android:textColor">@color/bottom_sheet_description_colo</item>
    </style>

    <style name="My_Navigation_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">@dimen/navigation_drawer_view_margin</item>
        <item name="android:layout_marginTop">@dimen/navigation_drawer_view_margin</item>
        <item name="android:layout_marginEnd">@dimen/navigation_drawer_view_margin</item>
        <item name="android:background">@color/navigation_view_color</item>
    </style>

    <style name="My_Navigation_Drawer_Layout">
        <item name="android:background">@color/navigation_drawer_bg_color</item>
    </style>

</resources>